@page "/currentweather"
@inject HttpClient Http

@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

<h3>Surf Spot Weather Overview</h3>

@if (isLoading)
{
    <p><em>Loading surf spots...</em></p>
}
else if (surfSpotsWithCondition == null || surfSpotsWithCondition.Count == 0)
{
    <p><em>No surf spots available.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Wind Degree</th>
                <th>Wind Speed (m/s)</th>
                <th>Surfable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spot in surfSpotsWithCondition)
            {
                <tr>
                    <td>@spot.Name</td>
                    <td>@spot.Location</td>
                    <td>@spot.WindDegree</td>
                    <td>@spot.WindSpeedMps</td>
                    <td>@(spot.Surfable ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<SurfLoggingSweden.Shared.Models.SurfSpotWithCondition> surfSpotsWithCondition;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            surfSpotsWithCondition = await Http.GetFromJsonAsync<List<SurfLoggingSweden.Shared.Models.SurfSpotWithCondition>>("api/surfspots/with-condition");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching surf spots: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
