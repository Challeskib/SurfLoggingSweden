@page "/surfsessions"
@inject HttpClient Http
@rendermode InteractiveWebAssembly

<h3>SurfSessionOverview</h3>

<PageTitle>Surf Sessions</PageTitle>

<p>This component demonstrates showing data.</p>

@if (surfSessions.Count == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Wind Degree</th>
                <th>Rating</th>
                <th>WindPower</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var surfSession in surfSessions)
            {
                <tr>
                    <td>@surfSessions.Start.ToShortDateString()</td>
                    <td>@surfSessions.WindDegree</td>
                    <td>@surfSessions.Rating</td>
                    <td>@surfSessions.WindPower</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<SurfSession> surfSessions = new List<SurfSession>();

     protected override async Task OnInitializedAsync()
    {
        try
        {
            surfSessions = await Http.GetFromJsonAsync<List<SurfSession>>("api/surfsessions");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error fetching surf sessions: {ex.Message}");
        }
    }
}
